# Copy this to .env and fill in your key
MOONSHOT_API_KEY=sk-xxxxxxxxxxxxxxxx

# Kimi K2.5 Model Settings (optional overrides)
KIMI_MODEL=kimi-k2.5
KIMI_TEMPERATURE=1.0
KIMI_TOP_P=0.95
KIMI_MAX_OUTPUT_TOKENS=8192

# OpenRouter Image Generation (optional - enables cover and chapter illustrations)
# Get your API key at https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxx
# FLUX model options: black-forest-labs/flux-1.1-pro (quality), black-forest-labs/flux-1-schnell (fast)
FLUX_MODEL=black-forest-labs/flux-1.1-pro
